<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<!-- ============================
       Connexions base de données
       ============================ -->
	<connectionStrings>
		<!-- Local (poste pilote) -->
		<add name="TransactionDb"
			 connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=TransactionDb;Integrated Security=True" />
	</connectionStrings>

	<!-- ============================
       Paramètres applicatifs
       ============================ -->
	<appSettings>
		<!-- Sortie CSV générique (prélèvements, etc.) : tu peux laisser vide si non utilisé -->
		<add key="CsvOutputRoot" value="" />

		<!-- Dossier d’archives CSV : tu peux laisser vide également -->
		<add key="ArchiveRoot" value="" />

		<!-- IMPORTANT: NSF -->
		<!-- Laisser vide => le programme choisit automatiquement
         %USERPROFILE%\Documents\TransactionViewer\NSF (utilisateur courant) -->
		<add key="NsfOutputRoot" value="" />

		<!-- Chemin de l’exécutable tiers lancé avant l’impression pour l’onglet NSF -->
		<add key="CreditExePath" value="C:\v100\Credit.exe" />

		<!-- (Facultatif) Dossier de logs si tu en ajoutes plus tard (NLog, etc.) -->
		<add key="LogDirectory" value="" />
	</appSettings>

	<!-- ============================
       Runtime .NET (classique)
       ============================ -->
	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<!-- Exemple de redirections si besoin à l’avenir -->
			<!--
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral"/>
        <bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0"/>
      </dependentAssembly>
      -->
		</assemblyBinding>
	</runtime>

</configuration>

